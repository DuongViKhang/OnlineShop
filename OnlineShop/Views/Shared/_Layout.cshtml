                                <input type="text" placeholder="Search">
                                <button class="search-btn" type="submit"><i class="pe-7s-search"></i></button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="offcanvas-minicart_wrapper" id="miniCart">
                <div class="offcanvas-body">
                    @if(ViewBag.cartItems != null && @ViewBag.totalCartItems != 0)
                    {
                    <div class="minicart-content">
                        <div class="minicart-heading">
                            <h4 class="mb-0">Giỏ hàng</h4>
                            <a href="#" class="button-close"><i class="pe-7s-close"></i></a>
                        </div>
                            <ul class="minicart-list">
                                @foreach (var item in ViewBag.cartItems)
                                {
                                    <li class="minicart-product">
                                        <div class="product-item_img">
                                            <img class="img-full" src="~/upload/images/product/@item.Image" alt="Product Image">
                                        </div>
                                        <div class="product-item_content">
                                            <p class="product-item_title">@item.ProductName</p>
                                             <span class="product-item_quantity"><h7 style="font-weight:bold;">Loại: </h7> @item.StyleName</span>
                                             <span class="product-item_quantity"><h7 style="font-weight:bold;">x @item.Count:</h7> @item.Total.ToString("#,##0") VNĐ</span>
                                        </div>
                                    </li>
                                }
                            </ul>
                    </div>
                    <div class="minicart-item_total" style="font-weight:bold;">
                        <span>Tổng đơn hàng:</span>
                        <span class="ammount">@ViewBag.totalCartItems.ToString("#,##0") VNĐ</span>
                    </div>
                    }
                    @if(ViewBag.cartItems == null || @ViewBag.totalCartItems == 0)
                    {
                        <div class="minicart-content">
                            <div class="minicart-heading">
                                <h4 class="mb-0">Giỏ hàng</h4>
                                <a href="#" class="button-close"><i class="pe-7s-close"></i></a>
                            </div>
                            <p style="padding-top:170px; padding-left:35px;">Chưa có sản phẩm trong giỏ hàng</p>
                        </div>
                    }
                    <div class="group-btn_wrap d-grid gap-2">
                        <a asp-controller="Shoppingcart" asp-action="Index" class="btn btn-secondary btn-primary-hover">Xem giỏ hàng</a>
                    </div>
                </div>
            </div>
