                                        <script src="~/lib/microsoft/signalr/dist/browser/signalr.min.js"></script>
                                            <script>

                                            var connection = new signalR.HubConnectionBuilder().withUrl("/chathub").build();

                                            connection.start().then(function () {
                                                console.log("SignalR connected");
                                            }).catch(function (err) {
                                                return console.error(err.toString());
                                            });
                                            connection.on("SignalNotice", () => {
                                                getNoticeData();
                                            });

                                                getNoticeData();
                                                // Get the modal
                                                var modal = document.getElementById("myNoticeModal");

                                                

                                                // Get the <span> element that closes the modal
                                                var span = document.getElementsByClassName("close")[0];

                                                function getNoticeData(){
                                                    var userId = @HttpContextAccessor.HttpContext.Session.GetString("userId");
                                                $.ajax({
                                                    url: `/api/Firebase/GetNotices/${userId}`, // Thay đổi URL thành URL của API
                                                    type: 'GET',
                                                    success: function (data) {
                                                        var quantity = document.getElementById('noticeQuantitySeen')
                                                        var size = 0;
                                                        var noticeContainer = document.getElementById('noticeContainer');
                                                        noticeContainer.innerHTML = "";
                                                        Object.values(data).forEach(function (item) {
                                                            //var noticeObj = JSON.parse(item);
                                                            //console.log(item.seen);
                                                            createNoticeElement(item);
                                                            if (!item.seen) {
                                                                size++;
                                                            }

                                                        });
                                                        quantity.textContent = size;
                                                    },
                                                    error: function (xhr, status, error) {
                                                        console.log(error);
                                                    }
                                                });
                                                }

                                                function openNoticeModal() {
                                                    

                                                    modal.style.display = "block";

                                                    
                                                }

                                          

                                                // When the user clicks on <span> (x), close the modal
                                                span.onclick = function () {
                                                document.getElementById('global-overlay').className = "global-overlay";
                                                    modal.style.display = "none";
                                                   
                                                }

                                                // When the user clicks anywhere outside of the modal, close it
                                                window.onclick = function (event) {
                                                    if (event.target == modal) {
                                                        modal.style.display = "none";
                                                    }
                                                }

                                                function createNoticeElement(notice) {
                                                    var noticeContainer = document.getElementById('noticeContainer');
                                                    var divElement = document.createElement('div');
                                                    
                                                    var noticeElement = document.createElement('p');
                                                    var date = document.createElement('p');
                                                    noticeElement.textContent = notice.message;
                                                    date.textContent = removeTFromDateTime(notice.sendDate);
                                                    if (!notice.seen) {
                                                        noticeElement.style = "font-weight: bold;"
                                                    }else{
                                                        noticeElement.style = "font-style: normal;"
                                                } 
                                                divElement.className = 'divElement';
                                                divElement.onclick = function () {
                                                    seenNotice(notice.id);

                                                    getNoticeData();
                                                };
                                                    divElement.appendChild(date);
                                                    divElement.appendChild(noticeElement);                                                
                                                    noticeContainer.appendChild(divElement);
                                                }

                                                function seenNotice(noticeId){
                                                var userId = @HttpContextAccessor.HttpContext.Session.GetString("userId");
                                                    $.ajax({
                                                        url: "/api/Firebase/UpdateSeen",
                                                        type: "PUT",
                                                        contentType: 'application/json',
                                                        data: JSON.stringify({
                                                            userId: ''+userId,
                                                            noticeId: noticeId
                                                        }),
                                                        success: function (response) {
                                                            console.log("Notice updated successfully:", response);
                                                        },
                                                        error: function (xhr, status, error) {
                                                            console.error("Failed to update notice:", xhr.responseText);
                                                        }
                                                    });
                                                }
                                            function removeTFromDateTime(dateTimeStr) {
                                                return dateTimeStr.replace('T', ' ');
                                            }
