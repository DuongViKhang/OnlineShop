@model OnlineShop.Models.Order
@{
    ViewData["Title"] = "Orders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>@ViewBag.id</h1>
<br/>
<div class="main-wrapper">

    <!-- Begin Main Content Area -->
    <main class="main-content">
        <div class="container">
            <div class="row">
                <div class="col-lg-9">
                    <div class="myaccount-orders">
                        <h4 class="small-title">Chi tiết đơn hàng</h4>
                        <div>
                            <hr />
                            <dl class="dl-horizontal">
                                <dt>
                                    Người nhận
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.Receiver)
                                </dd>
                                <dt>
                                    Địa chỉ
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.Address)
                                </dd>
                                <dt>
                                    SĐT
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.Phone)
                                </dd>
                                <dt>
                                    Tình trạng thanh toán
                                </dt>
                                @if (Model.IsPay == 0)
                                {
                                    <dd>Chưa thanh toán</dd>
                                }
                                @if (Model.IsPay == 1)
                                {
                                    <dd>Đã thanh toán</dd>
                                }
                                <dt>
                                    Email
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.Email)
                                </dd>
                                <dt>
                                    Ngày đặt
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.Date)
                                </dd>
                                <dt>
                                    Tình trạng đơn hàng
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.Status.StatusName)
                                </dd>
                                <dt>
                                    Sản phẩm
                                </dt>
                                
                                <dd>
                                    @foreach (var item in ViewBag.lst)
                                    {
                                        <div style="display:flex;">
                                            <div>
                                                <p style="display: block;
                                    width: 202px; height: auto;
                                    word-break: break-all; word-wrap: break-word;
                                    white-space: normal;">@item.ProductName</p>
                                            </div>
                                            <div><span class="amount" style="padding-left:10px; font-weight:bold;">x @item.Count: </span></div>
                                            <div><span class="amount" style="padding-left:10px;">@item.Total.ToString("#,##0") VNĐ</span></div>
                                        </div>
                                    }
                                </dd>
                                <dt>
                                    Tổng đơn hàng
                                </dt>
                                <dd>
                                    @ViewBag.total.ToString("#,##0") VNĐ
                                </dd>
                            </dl>
                        </div>
                        <div>
                            <a class="btn btn-primary" asp-action="Orders">Trở về danh sách</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>
<br/>
<br/>

