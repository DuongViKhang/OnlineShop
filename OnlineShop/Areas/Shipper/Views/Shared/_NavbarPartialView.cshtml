@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
<a class="sidebar-toggle js-sidebar-toggle">
	<i class="hamburger align-self-center"></i>
</a>
<div class="navbar-collapse collapse">
	<ul class="navbar-nav navbar-align">
		<li class="nav-item dropdown">
			<a class="nav-link dropdown-toggle d-none d-sm-inline-block" href="#" data-bs-toggle="dropdown">
				@if (HttpContextAccessor.HttpContext.Session.GetString("avatar") == null)
				{
					<img src="~/AdminAssets/img/avatars/avatar.jpg" class="avatar img-fluid rounded me-1" alt="Charles Hall" /> <span class="text-dark">@ViewBag.username</span>
				}
				@if (HttpContextAccessor.HttpContext.Session.GetString("avatar") != null)
				{
					<img src="~/upload/images/avatars/customer/@HttpContextAccessor.HttpContext.Session.GetString("avatar")"
						 class="avatar img-fluid rounded me-1" alt="Charles Hall" />
					<span class="text-dark">@ViewBag.username</span>
				}
			</a>
			<div class="dropdown-menu dropdown-menu-end">
				<a class="dropdown-item" asp-area="default" asp-controller="Customer" asp-action="SignOut"><i class="align-middle me-1" data-feather="log-out"></i>Đăng xuất</a>
			</div>
		</li>
	</ul>
</div>