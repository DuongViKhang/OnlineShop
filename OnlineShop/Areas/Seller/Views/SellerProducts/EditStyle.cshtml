@model OnlineShop.Models.Style

@{
    ViewData["Title"] = "AddStyle";
    Layout = "~/Areas/Seller/Views/Shared/_SellerLayout.cshtml";
}

@if (ViewBag.mess != null)
{
    <div class="alert alert-danger alert-dismissible fade show" id="myAlert" role="alert">
        <strong>Chỉnh sửa loại sản phẩm thất bại!</strong> @ViewBag.mess
    </div>
}
<h2>Chỉnh sửa loại sản phẩm</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditStyle" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="StyleId" type="hidden"/>
            <input asp-for="ProductId" type="hidden"/>
            <div class="form-group">
               <label class="control-label">Tên loại</label>
                <input asp-for="StyleName" class="form-control" />
                <span asp-validation-for="StyleName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label class="control-label">Ảnh sản phẩm</label>
                <input asp-for="Image" class="form-control" value="default.jpg" type="hidden"/>
                <input class="form-control" id="Image" name="Image" type="file"/>
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label class="control-label">Trạng thái</label>
                <select asp-for="IsDeleted" class="form-control">
                    <option value = "0">Đang bán</option>
                    <option value = "1">Ngừng bán</option>
                </select>
                <span asp-validation-for="IsDeleted" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
     <a asp-action="Details" asp-route-id="@Model.ProductId">Trở về</a>
</div>

