@model OnlineShop.Models.Category

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Xóa danh mục</h2>

<div>

    @if (Model.IsDeleted == 0)
    {
         <h4>Bạn có chắc chắn khóa không?</h4>
    }
    @if (Model.IsDeleted == 1)
    {
         <h4>Bạn có chắc chắn mở khóa không?</h4>
    }
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên danh mục
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CategoryName)
        </dd>
        <dt>
            Trạng thái
        </dt>
        <dd>
            @if(Model.IsDeleted == 0)
            {
                <p>Khả dụng</p>
            }
            @if(Model.IsDeleted == 1)
            {
                <p>Không khả dụng</p>
            }
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CategoryId" />
        @if (Model.IsDeleted == 0)
        {
             <input type="submit" value="Khóa" class="btn btn-danger" />
        }
        @if (Model.IsDeleted == 1)
        {
             <input type="submit" value="Mở khóa" class="btn btn-success" />
        }  |
        <a asp-action="Index">Trở về danh sách</a>
    </form>
</div>
