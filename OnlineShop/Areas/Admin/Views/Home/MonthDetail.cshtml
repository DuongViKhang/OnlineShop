
@{
    ViewData["Title"] = "MonthDetail";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<h1 class="h3 mb-3"><strong>Thống kê tháng @ViewBag.Month năm @ViewBag.Year</strong> </h1>
<div class="row">
	<div class="col-12 col-md-14 col-xxl-3 d-flex order-1 order-xxl-1">
		<div class="card flex-fill">
			<div class="card-header">

            </div>
			<table class="table table-condensed">
    			<thead>
                    <tr>
        				<td class="text-center"><strong>Mã sản phẩm</strong></td>
                        <td class="text-center"><strong>Tên sản phẩm</strong></td>
                        <td class="text-center"><strong>Giá sản phẩm</strong></td>
						<td class="text-center"><strong>Số lượng đã bán</strong></td>
        				<td class="text-center"><strong>Doanh thu</strong></td>
                        <td class="text-center"></td>
                        <td class="text-center"></td>
                    </tr>
    			</thead>
    			<tbody>
                    @for(int i = 0; i < ViewBag.products.Count; i++)
                    {
    					<tr>
    						<td class="text-center">@ViewBag.products[i].ProductId</td>
							<td style="padding-left:20px;
                                    width: 260px; height: auto;
                                    word-break: break-all; word-wrap: break-word;
                                    white-space: normal;">@ViewBag.products[i].ProductName</td>
							<td class="text-center">@ViewBag.products[i].PromotionalPrice.ToString("#,##0") VNĐ</td>
                            <td class="text-center">@ViewBag.solds[i].ToString("#,##0")</td>
                            <td class="text-center">@ViewBag.revenues[i].ToString("#,##0") VNĐ</td>
    					</tr>
                    }
					<tr>
    					<td class="no-line text-center"><strong>Tổng doanh thu</strong></td>
                        <td class="no-line text-center"></td>
                        <td class="no-line text-center"></td>
                        <td class="no-line text-center"></td>
    					<td class="no-line text-center"><strong>@ViewBag.totalRevenue.ToString("#,##0") VNĐ</strong></td>
    				</tr>
    			</tbody>
    		</table>
		</div>
	</div>
</div>
<div>
    <a href="@Url.Action("Index", "Home", new { selectedYear = @ViewBag.Year })">Trở về danh sách</a>
</div>